<Window x:Class="Game_Save.View.LocationOfGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Save.View"
        mc:Ignorable="d"
        Title="Расположение игры" Height="350" Width="400"
        Name="LocationOfGameWnd">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="300">

            <WrapPanel>
                <TextBlock Text="Ваша игра находится в:" HorizontalAlignment="Center" FontSize="25" Margin="15 0 0 0"/>
            </WrapPanel>
            <TextBox x:Name="wayToGame" Text="{Binding GamePath}" Background="#C4C4C4" Margin="20 5 20 10"/>
        </StackPanel>
        <Button Grid.Row="1" Content="Ок" Width="200"/>
    </Grid>
</Window>
